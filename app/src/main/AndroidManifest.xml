<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moviebuzz">

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MovieBuzzApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieBuzz"
        android:usesCleartextTraffic="true"
        tools:targetApi="28">

        <!-- LAUNCHER ACTIVITY -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AUTH -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:label="@string/title_signup" />

        <!-- CUSTOMER -->
        <activity
            android:name=".CustomerMainActivity"
            android:exported="false"
            android:label="@string/title_customer_main" />

        <activity
            android:name=".MovieDetailsActivity"
            android:exported="false"
            android:label="@string/title_movie_details" />

        <!-- ADMIN -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:label="@string/title_admin_dashboard" />

        <activity
            android:name=".ScheduleMovieActivity"
            android:exported="false"
            android:label="@string/title_schedule_movie" />

        <activity
            android:name=".ManageShowsActivity"
            android:exported="false"
            android:label="@string/title_manage_shows" />

        <activity
            android:name=".ShowBookingsActivity"
            android:exported="false"
            android:label="@string/title_show_bookings" />

    </application>

</manifest>